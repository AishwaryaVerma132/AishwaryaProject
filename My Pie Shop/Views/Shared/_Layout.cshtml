<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My_Pie_Shop </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/~/My_Pie_Shop.styles.css" asp-append-version="true" />
 
</head>
<body>
    <style>
         body{
            background-image:url("/Images/PieBG.webp");
        }
    </style>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark text-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <span class="logo"> <a asp-controller="Home" asp-action="Index"><img src="~/Images/PiePleasure_Logo.png" alt="" width="70" height="70" class="d-inline-block align-text-top"></a> </span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                   <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <h2><a class="nav-link text-light" asp-controller="Pie" asp-action="PiesOfTheWeek">Home</a></h2>
                        </li>
                        <li class="nav-item">
                            <h2><a class="nav-link text-light" asp-controller="Pie" asp-action="List">Pies</a></h2>
                        </li>                       
                        <li class="nav-item">
                            <h2><a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></h2>
                        </li>
                        <li class="nav-item">
                            <h2><a class="nav-link text-light" asp-controller="Pie" asp-action="MiniPie">Mini Pies List</a></h2>
                        </li>
                        <li class="nav-item">
                            <h2><a class="nav-link text-light" asp-controller="Pie" asp-action="AllCategories">All Categories</a></h2>
                        </li>
                        <li class="nav-item">
                            <h2><a class="nav-link text-light" asp-controller="ShoppingCart" asp-action="Index">View Cart</a></h2>
                            @await Component.InvokeAsync("ShoppingCartSummary")
                        </li>   
                        
                        <li class="nav-item">
                            <partial name="_LoginPartial">
                        </li>
                  </ul>

                  <div class="dropdown">
     
                         <li class="btncolor text-light btn btn-warning dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                          Sort By Price
                         </li>
    
                           <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <li><a class="dropdown-item" asp-controller="Pie" asp-action="ListAscending" >Ascending</a></li>
                            <li><a class="dropdown-item" asp-controller="Pie" asp-action="ListDescending" >Descending</a></li>
         
                           </ul>                       
                     </div>         
                    @await Component.InvokeAsync("CategoryMenu")
                    
                    
                </div>
            </div>
        </nav>   
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
